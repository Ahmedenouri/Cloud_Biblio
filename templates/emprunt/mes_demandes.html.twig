{% extends 'base.html.twig' %}

{% block title %}Mes Activit√©s | BiblioHub{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto px-6 py-10 min-h-screen">
    <h1 class="text-3xl font-bold text-biblio-dark mb-8 border-b border-gray-200 pb-4">Historique de mes activit√©s</h1>

    <div class="mb-12">
        <h2 class="text-2xl font-bold text-cyan-800 mb-4 flex items-center gap-2">
            <span>üì•</span> Ma Biblioth√®que Num√©rique
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% set has_downloads = false %}
            
            {% for commande in commandes %}
                {% if commande.statut == 'VALIDE' %}
                    {% for ligne in commande.ligneCommandes %}
                        {% if ligne.type == 'pdf' and ligne.livre.pdf %}
                            {% set has_downloads = true %}
                            
                            <div class="bg-white border border-cyan-100 rounded-xl shadow-sm hover:shadow-md transition overflow-hidden">
                                <div class="p-4 flex gap-4">
                                    
                                    {# --- IMAGE √Ä GAUCHE --- #}
                                    {% if ligne.livre.image %}
                                        <img src="{{ asset('uploads/images/' ~ ligne.livre.image) }}" class="w-24 h-32 object-cover rounded shadow-sm border border-gray-200 shrink-0">
                                    {% else %}
                                        <div class="w-24 h-32 bg-gray-100 rounded border border-gray-200 flex items-center justify-center shrink-0">
                                            <span class="text-xs text-gray-400">Pas d'image</span>
                                        </div>
                                    {% endif %}

                                    {# --- CONTENU √Ä DROITE --- #}
                                    <div class="flex flex-col flex-grow">
                                        <div class="flex justify-between items-start mb-1">
                                            <h3 class="font-bold text-gray-800 leading-tight line-clamp-2">{{ ligne.livre.titre }}</h3>
                                            <span class="shrink-0 ml-2 bg-cyan-100 text-cyan-800 text-[10px] font-bold px-2 py-0.5 rounded">PDF</span>
                                        </div>
                                        
                                        <p class="text-xs text-gray-500 mb-auto">Achet√© le {{ commande.dateCommande|date('d/m/Y') }}</p>
                                        
                                        <a href="{{ path('app_livre_download', {'id': ligne.livre.id}) }}" target="_blank" class="mt-3 w-full flex items-center justify-center gap-2 bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-2 px-3 rounded text-sm transition">
                                            <span>üì•</span> T√©l√©charger
                                        </a>
                                    </div>
                                </div>
                            </div>

                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}

            {% if has_downloads == false %}
                <div class="col-span-full bg-cyan-50 border border-cyan-100 rounded-lg p-8 text-center">
                    <p class="text-cyan-800 font-medium mb-2">Votre biblioth√®que num√©rique est vide.</p>
                    <p class="text-sm text-cyan-600">Les livres achet√©s en version PDF appara√Ætront ici.</p>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="mb-12">
        <h2 class="text-2xl font-bold text-biblio-dark mb-4 flex items-center gap-2">
            <span>üìö</span> Mes Emprunts en cours
        </h2>
        
        <div class="bg-white rounded-lg shadow overflow-hidden border border-gray-100">
            <table class="min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Livre</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Retour Pr√©vu</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for emprunt in emprunts %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 text-sm text-gray-500">{{ emprunt.dateEmprunt|date('d/m/Y') }}</td>
                            <td class="px-6 py-4"><span class="font-bold text-gray-900">{{ emprunt.livre.titre }}</span></td>
                            <td class="px-6 py-4 text-sm text-gray-600">{{ emprunt.dateRetourPrevue|date('d/m/Y') }}</td>
                            <td class="px-6 py-4 text-center">
                                {% if emprunt.statut == 'EN_ATTENTE' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">‚è≥ En attente</span>
                                {% elseif emprunt.statut == 'VALIDE' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">‚úÖ Valid√©</span>
                                {% elseif emprunt.statut == 'REFUSE' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">‚ùå Refus√©</span>
                                {% else %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">{{ emprunt.statut }}</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-6 py-8 text-center text-gray-500 italic">Vous n'avez aucun emprunt en cours.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <h2 class="text-2xl font-bold text-gray-700 mb-4 flex items-center gap-2">
            <span>üßæ</span> Historique des Achats
        </h2>
        
        <div class="bg-white rounded-lg shadow overflow-hidden border border-gray-100">
            <table class="min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contenu</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for commande in commandes %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 text-sm text-gray-500">
                                {{ commande.dateCommande|date('d/m/Y H:i') }}
                            </td>
                            <td class="px-6 py-4">
                                <ul class="text-sm text-gray-700 space-y-2">
                                    {% for ligne in commande.ligneCommandes %}
                                        <li class="flex items-center gap-2">
                                            <span class="font-bold bg-gray-200 px-2 py-0.5 rounded text-xs">{{ ligne.quantite }}x</span> 
                                            <span>{{ ligne.livre.titre }}</span>
                                            
                                            {% if ligne.type == 'pdf' %}
                                                <span class="text-[10px] font-bold text-cyan-600 border border-cyan-200 px-1 rounded uppercase">Num√©rique</span>
                                            {% else %}
                                                <span class="text-[10px] font-bold text-gray-500 border border-gray-200 px-1 rounded uppercase">Papier</span>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td class="px-6 py-4 text-sm font-bold text-biblio-dark">
                                {{ commande.total }} MAD
                            </td>
                            <td class="px-6 py-4 text-center">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 border border-gray-200">
                                    {{ commande.statut }}
                                </span>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-6 py-8 text-center text-gray-500 italic">
                                Vous n'avez effectu√© aucun achat.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}