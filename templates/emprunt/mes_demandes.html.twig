{% extends 'base.html.twig' %}

{% block title %}Mes Activit√©s | BiblioHub{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto px-6 py-10 min-h-screen">
    
    <h1 class="text-3xl font-bold text-biblio-dark mb-8 border-b border-gray-200 pb-4">Historique de mes activit√©s</h1>

    <div class="mb-12">
        <h2 class="text-2xl font-bold text-cyan-800 mb-4 flex items-center gap-2">
            <span>üì•</span> Ma Biblioth√®que Num√©rique
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% set has_downloads = false %}
            
            {% for commande in commandes %}
                {% if commande.statut == 'VALIDE' %}
                    {% for ligne in commande.ligneCommandes %}
                        {% if ligne.type == 'pdf' and ligne.livre.pdf %}
                            {% set has_downloads = true %}
                            
                            <div class="bg-white border border-cyan-100 rounded-xl shadow-sm hover:shadow-md transition overflow-hidden group">
                                <div class="p-4 flex gap-4">
                                    {# Image #}
                                    {% if ligne.livre.image %}
                                        <img src="{{ asset('uploads/images/' ~ ligne.livre.image) }}" class="w-24 h-32 object-cover rounded shadow-sm border border-gray-200 shrink-0 group-hover:scale-105 transition">
                                    {% else %}
                                        <div class="w-24 h-32 bg-gray-100 rounded border border-gray-200 flex items-center justify-center shrink-0">
                                            <span class="text-xs text-gray-400">N/A</span>
                                        </div>
                                    {% endif %}

                                    {# Infos #}
                                    <div class="flex flex-col flex-grow">
                                        <div class="flex justify-between items-start mb-1">
                                            <h3 class="font-bold text-gray-800 leading-tight line-clamp-2">{{ ligne.livre.titre }}</h3>
                                            <span class="shrink-0 ml-2 bg-cyan-100 text-cyan-800 text-[10px] font-bold px-2 py-0.5 rounded">PDF</span>
                                        </div>
                                        <p class="text-xs text-gray-500 mb-auto">Achet√© le {{ commande.dateCommande|date('d/m/Y') }}</p>
                                        
                                        <a href="{{ path('app_livre_download', {'id': ligne.livre.id}) }}" target="_blank" class="mt-3 w-full flex items-center justify-center gap-2 bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-2 px-3 rounded text-sm transition shadow-sm">
                                            <span>üì•</span> T√©l√©charger
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}

            {% if has_downloads == false %}
                <div class="col-span-full bg-cyan-50 border border-cyan-100 rounded-lg p-8 text-center">
                    <p class="text-cyan-800 font-medium mb-2">Votre biblioth√®que num√©rique est vide.</p>
                    <p class="text-sm text-cyan-600">Les livres achet√©s en version PDF appara√Ætront ici.</p>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="mb-12">
        <h2 class="text-2xl font-bold text-biblio-dark mb-4 flex items-center gap-2">
            <span>üìö</span> Suivi de mes Emprunts
        </h2>
        
        <div class="bg-white rounded-lg shadow overflow-hidden border border-gray-100">
            <table class="min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Livre</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">√âch√©ance</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for emprunt in emprunts %}
                        {# Calcul du retard pour affichage User #}
                        {% set isLate = false %}
                        {% if emprunt.statut == 'EN_COURS' and emprunt.dateRetourPrevue %}
                            {% set isLate = "now"|date('Y-m-d') > emprunt.dateRetourPrevue|date('Y-m-d') %}
                        {% endif %}

                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-4">
                                <span class="font-bold text-gray-900 block">{{ emprunt.livre.titre }}</span>
                                <span class="text-xs text-gray-500">Demande du : {{ emprunt.dateEmprunt|date('d/m/Y') }}</span>
                            </td>

                            <td class="px-6 py-4 text-sm">
                                {% if emprunt.statut == 'EN_ATTENTE' %}
                                    <span class="text-gray-400 italic">En attente de validation par le staff...</span>
                                {% elseif emprunt.dateRetourPrevue %}
                                    <div class="flex flex-col">
                                        <span>Retour pr√©vu : <strong>{{ emprunt.dateRetourPrevue|date('d/m/Y') }}</strong></span>
                                        {% if isLate and emprunt.statut == 'EN_COURS' %}
                                            <span class="text-red-600 font-bold text-xs mt-1">‚ö†Ô∏è D√©lai d√©pass√© !</span>
                                        {% elseif emprunt.statut == 'EN_COURS' %}
                                            {# Calcul jours restants #}
                                            {% set daysLeft = date(emprunt.dateRetourPrevue).diff(date('now')).days %}
                                            <span class="text-green-600 text-xs mt-1">
                                                (Il vous reste {{ daysLeft }} jours)
                                            </span>
                                        {% endif %}
                                    </div>
                                {% else %}
                                    <span class="text-gray-400">-</span>
                                {% endif %}
                            </td>

                            <td class="px-6 py-4 text-center">
                                {% if emprunt.statut == 'EN_ATTENTE' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 border border-yellow-200">
                                        ‚è≥ Demande envoy√©e
                                    </span>
                                
                                {% elseif emprunt.statut == 'EN_COURS' %}
                                    {% if isLate %}
                                        <div class="bg-red-100 text-red-800 px-3 py-2 rounded-lg text-xs font-bold border border-red-200">
                                            üö® RETARD D√âCLAR√â<br>
                                            Veuillez rendre le livre ASAP.
                                        </div>
                                    {% else %}
                                        <div class="bg-blue-50 text-blue-800 px-3 py-2 rounded-lg text-xs border border-blue-100">
                                            üìñ Emprunt Actif<br>
                                            <span class="font-bold">√Ä rendre √† la biblioth√®que</span>
                                        </div>
                                    {% endif %}

                                {% elseif emprunt.statut == 'RENDU' %}
                                    <div class="flex flex-col items-center">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 mb-1">
                                            ‚úÖ Rendu
                                        </span>
                                        {% if emprunt.amende > 0 %}
                                            <div class="mt-2 bg-red-50 text-red-700 px-3 py-1 rounded border border-red-200 text-xs font-bold">
                                                Amende √† payer : {{ emprunt.amende }} MAD
                                            </div>
                                        {% endif %}
                                    </div>

                                {% elseif emprunt.statut == 'REFUSE' %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-600">
                                        ‚ùå Refus√©
                                    </span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="px-6 py-8 text-center text-gray-500 italic">
                                Vous n'avez aucun emprunt en cours.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <h2 class="text-2xl font-bold text-gray-700 mb-4 flex items-center gap-2">
            <span>üßæ</span> Historique des Paiements
        </h2>
        
        <div class="bg-white rounded-lg shadow overflow-hidden border border-gray-100">
            <table class="min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">D√©tails</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Montant</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for commande in commandes %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 text-sm text-gray-500 align-top">
                                {{ commande.dateCommande|date('d/m/Y H:i') }}
                            </td>
                            <td class="px-6 py-4">
                                <ul class="text-sm text-gray-700 space-y-2">
                                    {% for ligne in commande.ligneCommandes %}
                                        <li class="flex items-center gap-2">
                                            <span class="font-bold bg-gray-200 px-2 py-0.5 rounded text-xs text-gray-600">{{ ligne.quantite }}x</span> 
                                            <span class="font-medium">{{ ligne.livre.titre }}</span>
                                            
                                            {% if ligne.type == 'pdf' %}
                                                <span class="text-[10px] font-bold text-cyan-600 border border-cyan-200 px-1 rounded uppercase bg-cyan-50">Num√©rique</span>
                                            {% elseif ligne.type == 'emprunt' %}
                                                <span class="text-[10px] font-bold text-orange-600 border border-orange-200 px-1 rounded uppercase bg-orange-50">Location</span>
                                            {% else %}
                                                <span class="text-[10px] font-bold text-gray-500 border border-gray-200 px-1 rounded uppercase">Papier</span>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td class="px-6 py-4 text-right align-top">
                                <span class="font-bold text-biblio-dark text-lg">{{ commande.total }} MAD</span>
                                <div class="mt-1">
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                                        Pay√©
                                    </span>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="px-6 py-8 text-center text-gray-500 italic">
                                Aucun paiement enregistr√©.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}