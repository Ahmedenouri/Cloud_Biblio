{% extends 'base.html.twig' %}

{% block title %}LivrePdf index{% endblock %}

{% block body %}
    <h1>LivrePdf index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fichier</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre_pdf in livre_pdfs %}
            <tr>
                <td>{{ livre_pdf.id }}</td>
                <td>{{ livre_pdf.fichier }}</td>
                <td>{{ livre_pdf.createdAt ? livre_pdf.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ livre_pdf.updatedAt ? livre_pdf.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_livre_pdf_show', {'id': livre_pdf.id}) }}">show</a>
                    <a href="{{ path('app_livre_pdf_edit', {'id': livre_pdf.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_livre_pdf_new') }}">Create new</a>
{% endblock %}
