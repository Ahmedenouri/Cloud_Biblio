{% extends 'base.html.twig' %}
{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-6 py-10 min-h-screen">
    <h1 class="text-3xl font-bold text-biblio-dark mb-8">Mon Panier</h1>

    {% if dataPanier|length > 0 %}
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <table class="min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Livre</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Quantit√©</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Prix</th>
                        <th class="px-6 py-3"></th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for item in dataPanier %}
                        <tr>
                            <td class="px-6 py-4">
                                <div class="text-sm font-bold text-gray-900">{{ item.livre.titre }}</div>
                            </td>
                            <td class="px-6 py-4">
                                {% if item.type == 'emprunt' %}
                                    <span class="bg-blue-100 text-blue-800 text-xs font-bold px-2 py-1 rounded">Emprunt</span>
                                {% else %}
                                    <span class="bg-green-100 text-green-800 text-xs font-bold px-2 py-1 rounded">Achat</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">
                                {{ item.quantity }}
                            </td>
                            <td class="px-6 py-4 text-right text-sm font-medium text-gray-900">
                                {% if item.type == 'achat' %}
                                    {{ item.livre.prix * item.quantity }} MAD
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-right">
                                <a href="{{ path('app_cart_remove', {'id': item.livre.id}) }}" class="text-red-600 hover:text-red-900">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            <div class="px-6 py-4 bg-gray-50 flex justify-between items-center">
                <div class="text-lg font-bold text-gray-800">
                    Total Achat: {{ totalAchat }} MAD
                </div>
                <a href="{{ path('app_cart_validate') }}" class="bg-biblio-dark hover:bg-biblio-accent text-white font-bold py-2 px-6 rounded shadow transition">
                    Valider mon panier
                </a>
            </div>
        </div>
    {% else %}
        <div class="text-center py-12 bg-white rounded-lg shadow">
            <p class="text-gray-500">Votre panier est vide.</p>
            <a href="{{ path('app_livre_index') }}" class="text-biblio-dark font-bold hover:underline">Retourner au catalogue</a>
        </div>
    {% endif %}
</div>
{% endblock %}