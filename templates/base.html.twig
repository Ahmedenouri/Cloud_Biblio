<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}BiblioHub{% endblock %}</title>
        
        {# --- AJOUT FONT AWESOME (POUR LES IC√îNES) --- #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üìö</text></svg>">
        
        {# --- CONFIGURATION TAILWIND CSS --- #}
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
          tailwind.config = {
            theme: {
              extend: {
                colors: {
                  biblio: {
                    dark: '#8B5E3C',  /* Marron fonc√© */
                    light: '#F5F1E6', /* Beige clair */
                    accent: '#A67C52', /* Marron clair */
                  }
                }
              }
            }
          }
        </script>
        
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-biblio-light font-sans text-gray-800 flex flex-col min-h-screen">
        
        {# --- NAVBAR GLOBALE --- #}
        <nav class="bg-biblio-dark shadow-lg sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-20">
                    
                    <div class="flex items-center gap-8">
                        <a href="{{ path('app_home') }}" class="flex items-center gap-2 group">
                            <span class="text-3xl">üìö</span>
                            <span class="text-2xl font-bold text-biblio-light group-hover:text-white transition">BiblioHub</span>
                        </a>

                        <div class="hidden md:flex items-center gap-6">
                            {# 1. CATALOGUE PUBLIC #}
                            <a href="{{ path('app_home') }}" class="text-biblio-light hover:text-white font-bold text-lg transition border-b-2 border-transparent hover:border-biblio-light pb-1">
                                Catalogue
                            </a>
                            
                            {# 2. ESPACE GESTION (Biblioth√©caire & Admin) #}
                            {% if is_granted('ROLE_BIBLIOTHECAIRE') %}
                                <span class="text-biblio-light/30 text-xl">|</span>
                                <a href="{{ path('app_livre_index') }}" class="text-biblio-light hover:text-white font-medium transition flex items-center gap-1">
                                    <i class="fa-solid fa-gear"></i> Livres
                                </a>
                                <a href="{{ path('app_emprunt_index') }}" class="text-biblio-light hover:text-white font-medium transition flex items-center gap-1">
                                    <i class="fa-solid fa-clipboard-list"></i> Emprunts
                                </a>
                            {% endif %}

                            {# 3. DASHBOARD ADMIN (ADMIN UNIQUEMENT) #}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_admin_dashboard') }}" class="bg-biblio-accent/30 text-white px-3 py-1 rounded-lg font-bold hover:bg-biblio-accent transition flex items-center gap-2 border border-biblio-accent/50">
                                    <i class="fa-solid fa-chart-line"></i> Dashboard
                                </a>
                            {% endif %}
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        {% if app.user %}
                            <a href="{{ path('app_mes_demandes') }}" class="hidden md:flex items-center gap-2 bg-biblio-light text-biblio-dark hover:bg-white px-5 py-2.5 rounded-full font-bold shadow-md transform hover:-translate-y-0.5 transition">
                                <i class="fa-solid fa-list-check"></i> <span>Mes Demandes</span>
                            </a>
                        {% endif %}

                        <a href="{{ path('app_cart_index') }}" class="flex items-center gap-2 bg-biblio-light text-biblio-dark hover:bg-white px-5 py-2.5 rounded-full font-bold shadow-md transform hover:-translate-y-0.5 transition" title="Voir mon panier">
                            <i class="fa-solid fa-cart-shopping text-xl"></i>
                            <span class="hidden sm:inline">Panier</span>
                            {% if app.session.get('panier')|length > 0 %}
                                <span class="bg-biblio-dark text-biblio-light text-xs py-0.5 px-2 rounded-full ml-1">
                                    {{ app.session.get('panier')|length }}
                                </span>
                            {% endif %}
                        </a>

                        {% if app.user %}
                            <div class="relative ml-2">
                                <button type="button" onclick="toggleUserMenu()" class="flex items-center gap-2 bg-[#6d462c] text-biblio-light hover:text-white hover:bg-[#5a3a24] rounded-full px-4 py-2 text-sm transition shadow border border-biblio-light/30" id="user-menu-button">
                                    <span class="font-bold truncate max-w-[100px]">{{ app.user.nom }}</span>
                                    <i class="fa-solid fa-caret-down"></i>
                                </button>

                                <div id="user-menu-dropdown" class="hidden origin-top-right absolute right-0 mt-2 w-52 rounded-xl shadow-2xl py-2 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-50 overflow-hidden">
                                    <div class="px-4 py-3 border-b border-gray-100 bg-gray-50">
                                        <p class="text-[10px] text-gray-400 uppercase font-black tracking-widest">Connect√©</p>
                                        <p class="text-sm font-bold text-biblio-dark truncate">{{ app.user.email }}</p>
                                    </div>
                                    
                                    {# LIEN MON PROFIL #}
                                    <a href="{{ path('app_profile') }}" class="block px-4 py-3 text-sm text-gray-700 hover:bg-biblio-light hover:text-biblio-dark font-bold transition flex items-center gap-3">
                                        <i class="fa-solid fa-user text-lg"></i> Mon Profil
                                    </a>

                                    <div class="border-t border-gray-100 mt-1">
                                        <a href="{{ path('app_logout') }}" class="block px-4 py-3 text-sm text-red-600 hover:bg-red-50 font-bold transition flex items-center gap-3">
                                            <i class="fa-solid fa-right-from-bracket text-lg"></i> D√©connexion
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="flex gap-3">
                                <a href="{{ path('app_login') }}" class="text-biblio-light border-2 border-biblio-light hover:bg-biblio-light hover:text-biblio-dark px-5 py-2 rounded-full font-bold transition">
                                    Connexion
                                </a>
                                <a href="{{ path('app_register') }}" class="bg-biblio-light text-biblio-dark hover:bg-white px-5 py-2 rounded-full text-sm font-bold shadow transition">
                                    S'inscrire
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>

        {# --- MESSAGES FLASH --- #}
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6 w-full">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="rounded-xl p-4 mb-4 shadow-lg flex items-center gap-3 animate-bounce border-l-4
                        {% if label == 'success' %}bg-green-50 text-green-800 border-green-500{% elseif label == 'error' %}bg-red-50 text-red-800 border-red-500{% else %}bg-blue-50 text-blue-800 border-blue-500{% endif %}">
                        <span class="text-xl">
                            {% if label == 'success' %}‚úÖ{% elseif label == 'error' %}‚ùå{% else %}‚ÑπÔ∏è{% endif %}
                        </span>
                        <span class="font-bold">{{ message }}</span>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {# --- CONTENU PRINCIPAL --- #}
        <main class="flex-grow">
            {% block body %}{% endblock %}
        </main>

        {# --- FOOTER --- #}
        <footer class="bg-biblio-dark text-biblio-light py-10 mt-12 border-t border-white/10">
            <div class="max-w-7xl mx-auto px-4 text-center">
                <p class="font-black text-xl tracking-tighter">&copy; {{ "now"|date("Y") }} BiblioHub</p>
                <p class="text-xs opacity-60 mt-2 uppercase tracking-widest font-bold">L'√©l√©gance du savoir</p>
            </div>
        </footer>

        {# --- SCRIPT NAVIGATION --- #}
        <script>
            function toggleUserMenu() {
                const menu = document.getElementById('user-menu-dropdown');
                if(menu) menu.classList.toggle('hidden');
            }
            // Ferme le menu si on clique ailleurs
            window.addEventListener('click', function(e) {
                const button = document.getElementById('user-menu-button');
                const menu = document.getElementById('user-menu-dropdown');
                if (button && menu && !button.contains(e.target) && !menu.contains(e.target)) {
                    menu.classList.add('hidden');
                }
            });
        </script>
    </body>
</html>